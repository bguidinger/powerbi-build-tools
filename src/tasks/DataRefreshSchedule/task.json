  "category": "Azure Pipelines",
  "visibility": [
    "Build",
    "Release"
  ],
  "demands": [
    "powershell"
  ],
  "version": {
    "Major": "1",
    "Minor": "0",
    "Patch": "0"
  },
  "instanceNameFormat": "Power BI Data Refresh Schedule: $(Name)",
  "inputs": [
    {
      "name": "Connection",
      "aliases": [
        "connection"
      ],
      "type": "connectedService:Power-BI",
      "label": "Power BI connection",
      "required": true,
      "helpMarkDown": "The service connection to Power BI."
    },
    {
      "name": "Type",
      "aliases": [
        "type"
      ],
      "type": "pickList",
      "label": "Type",
      "required": true,
      "options": {
        "Dataset": "Dataset",
        "Dataflow": "Dataflow"
      }
    },
    {
      "name": "Workspace",
      "aliases": [
        "workspace"
      ],
      "type": "string",
      "label": "Workspace",
      "required": false,
      "helpMarkDown": "The ID or name of the workspace. If not specified, your personal workspace will be used."
    },
    {
      "name": "Name",
      "aliases": [
        "name"
      ],
      "type": "string",
      "label": "Name",
      "required": true,
      "helpMarkDown": "The ID or name of the dataset or dataflow."
    },
    {
      "name": "Action",
      "aliases": [
        "action"
      ],
      "type": "pickList",
      "label": "Action",
      "required": true,
      "options": {
        "SetState": "Set State"
      }
    },
    {
      "name": "Enabled",
      "aliases": [
        "enabled"
      ],
      "type": "boolean",
      "label": "Enabled",
      "required": false,
      "helpMarkDown": "Enables or disables the refresh schedule.",
